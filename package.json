{
  "name": "backend",
  "version": "0.1.0",
  "bin": {
    "backend": "bin/index.js"
  },
  "workspaces": [
    "lambdas"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "precommit": "npm run esbuild -w lambdas && npm run cdk -- synth && npm run test && npm run lint:fix && npm run format",
    "prepush": "npm run lint"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1012.0",
    "eslint": "^9.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.190.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.0"
  }
